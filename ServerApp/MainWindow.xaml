<Window x:Class="ServerWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="880">
    <Grid Margin="0,0,5,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="ConsoleOfConnectionRequest"
                 Grid.Row="1"
                 Grid.Column="1"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Margin="10"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 />

        <TextBox x:Name="ConsoleOfAuthenticationRequest"
                 Grid.Row="1"
                 Grid.Column="0"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Margin="10"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 />

        <TextBox x:Name="ConsoleOfDatabaseRequest"
                 Grid.Row="0"
                 Grid.Column="1"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Margin="10"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 />

        <TextBox x:Name="ConsoleOfSystem"
                 Grid.Row="0"
                 Grid.Column="0"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Margin="10"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 />
    </Grid>
</Window>
